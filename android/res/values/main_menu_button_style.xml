<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_menu_button_style">
        <item name="android:fontFamily">@font/jetbrainsmono_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="main_menu_button_selector_style" parent="main_menu_button_style">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:paddingEnd">50dp</item>
    </style>
</resources>